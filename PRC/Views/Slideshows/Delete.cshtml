@model PRC.Models.Slideshow

@{
    ViewData["Title"] = "Delete A Slide";
    Layout = "_LayoutAdmin";
}

<h4>@ViewData["Title"]</h4> | <a href="/admin/newsletters">Back to Slides</a>
<hr />
<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Slideshow</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Url)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Url)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
</div>
