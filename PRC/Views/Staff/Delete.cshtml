@model PRC.Models.Staff

@{
    ViewData["Title"] = "Delete This Staff Member?";
    Layout = "_LayoutAdmin";
}

<h4>@ViewData["Title"]</h4> | <a href="/admin/staff">Back to Staff</a>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            <img src="@Model.Image" width="100" />
        </dt>
        <dd class="col-sm-10">
            
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Role)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Role)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
</div>
